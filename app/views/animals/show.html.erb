<p id="notice"><%= notice %></p>

<p>
  <b>Namnet på dyret:</b>
  <%= @animal.name %>
</p>

<p>
  <b>ID-merket:</b>
  <%= @animal.id_tag %>
</p>

<p>
  <b>Fødselsdato:</b>
  <%= @animal.birth_date %>
</p>

<p>
  <b>Kjønn:</b>
  <%= @animal.sex %>
</p>

<% if @animal.mother %>
<p>
  <b>Mor:</b>
  <%= @animal.mother.id_tag %>
  <%= @animal.mother.name %>
</p>
<% end %>

<% if @animal.father %>
<p>
  <b>Far:</b>
  <%= @animal.father.id_tag %>
  <%= @animal.father.name %>
</p>
<% end %>

<% if not @animal.children.blank? %>
<p>
  <b>Lam:</b>
  <ul>
  <% @animal.children.each do |child| %>
    <li><%= child.name %> <%= child.id_tag %></li>
  <% end %>
  </ul>
<% end %>

<%= link_to 'Edit', edit_animal_path(@animal) %> |
<%= link_to 'Back', animals_path %>
